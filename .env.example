# ===========================================
# AI Job-Candidate Matching System
# Environment Configuration
# ===========================================

# Application
NODE_ENV=development
PORT=3000

# Hugging Face API (Required)
# Get your token at: https://huggingface.co/settings/tokens
# You must accept the Llama 3.1 license at: https://huggingface.co/meta-llama/Llama-3.1-8B-Instruct
HF_TOKEN=hf_your_token_here

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=job_matching

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Redis (BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379

# LLM Configuration
LLM_MODEL=meta-llama/Llama-3.1-8B-Instruct
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
EMBEDDING_DIMENSIONS=384

# Qdrant Collection Names
QDRANT_CANDIDATES_COLLECTION=candidates
QDRANT_JOBS_COLLECTION=jobs

# Matching Configuration
MAX_CANDIDATES_RETURN=5
DUAL_MATCH_SCORE=100
